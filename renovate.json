{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "abandonments:recommended",
    "default:automergePatch",
    "default:automergeMinor",
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
