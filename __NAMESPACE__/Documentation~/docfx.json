{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "**/*.cs"
                    ],
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "template": [
            "modern",
            "templates/unity"
        ],
        "globalMetadata": {
            "_appTitle": "__NAME__",
            "_appFooter": "__NAME__",
            "_enableSearch": true,
            "_disableContribution": true
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "manual"
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "dest": "_site"
    }
}
